<Alarm>:
    orientation: 'vertical'
    padding: 30

    time_input: time
    day_input: day

    FloatLayout:
        TextInput:
            font_size: 20
            margin: 20
            size_hint: 0.5, 0.3
            pos_hint: {'center_x': 0.5, 'y': 0.5}
            multiline: False
            id: time

        TextInput:
        	font_size: 20
        	size_hint: 0.5, 0.3
        	pos_hint: {'center_x': 0.5, 'y': 0.3}
        	multiline: False
        	id: day
        FloatLayout:
	        Button:
	        	text: 'Hello world'
	        	size_hint: 0.5, 0.2
	        	pos_hint: {'center_x': 0.5, 'y': 0.1}
	        	on_release:
	        		root.Inputs()

      	